<Window x:Class="PlaceOrder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlaceOrder"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Add Order" Height="550" Width="525">
    <Grid>
        <StackPanel>
            <TextBlock>Customer</TextBlock>
            <TextBox Name="CustName">Sarah</TextBox>
            <TextBlock>Item</TextBlock>
            <TextBox Name="OrderItem">Apples</TextBox>
            <TextBlock>Quantity</TextBlock>
            <TextBox Name="OrderQuantity">10</TextBox>
            <TextBlock>Order ID</TextBlock>
            <TextBox Name="OrderId">99</TextBox>
            <Button Name="PlaceOrder" Click="PlaceOrder_OnClick">Place Order</Button>
            <Button Name="SimulateError" Click="SimulateError_OnClick">Write Error</Button>
        </StackPanel>
    </Grid>
</Window>
